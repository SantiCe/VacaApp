<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/camera_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.example.keinsfield.vacapp.Views.FocusBoxView
    android:id="@+id/focus_box"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:layout_gravity="right|bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/add_button"
                android:background="@drawable/cow_add_layout"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="bottom" />
            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/recog_button"
                android:background="@drawable/cow_eye_layout"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="bottom" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginRight="43dp"
            android:layout_marginEnd="43dp"
            android:gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <Button
                android:layout_width="86dp"
                android:layout_height="86dp"

                android:id="@+id/shutter_button"
                android:background="@drawable/shutter_layout"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="bottom" />
        </LinearLayout>

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/cloudButton"
            android:background="@drawable/cloud_layout"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/detailButton"
            android:layout_toRightOf="@+id/detailButton"
            android:layout_toEndOf="@+id/detailButton"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/detailButton"
            android:background="@drawable/detail_layout"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="145dp"
            android:layout_marginStart="145dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3" />


    </RelativeLayout>
</FrameLayout>